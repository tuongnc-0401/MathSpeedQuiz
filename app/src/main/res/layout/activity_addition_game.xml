<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#2ecc71"
    tools:context=".AdditionGame">

    <TextView
        android:id="@+id/txt_titile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2ecc71"
        android:paddingHorizontal="15dp"
        android:text="Math Speed Quiz"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="question"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_countdown" />

    <ProgressBar
        android:id="@+id/progress_countdown"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titile" />

    <TextView
        android:id="@+id/txt_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="40sp"
        android:text="0"
        android:textColor="#000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_question" />

    <TableLayout
        android:id="@+id/table_cal"
        android:layout_width="409dp"
        android:layout_height="488dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="7"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="8"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="9"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="0"
                android:textSize="50sp"
                app:cornerRadius="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="4"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="5"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="6"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#c0392b"
                android:text="C"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="1"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="2"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="@color/grey"
                android:text="3"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#27ae60"
                android:text="OK"
                android:textSize="45sp"
                app:cornerRadius="0dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="60sec"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_countdown" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="0 pts"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_countdown" />

</androidx.constraintlayout.widget.ConstraintLayout>